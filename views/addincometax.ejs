                                                      <td><%= Employees[i].empID %></td>
                                                      <td><%= Employees[i].gross_sal*12 %></td>
                                                      <td><%= Employees[i].exemption %></td>
                                                      <td><input type="text" value=<%= Employees[i].total_investments %> name=<%= Employees[i].empID %>></td>
