                                              <tr>
                                                <th>Employee ID <p><i class="arrow down" style="float: right;"></i></p>
                                                </th>
                                                <th>Gross Total Income</th>
                                                <th>Exemption</th>
                                                <th>Total Investments</th>
                                                <th>Net Taxable Income</th>
